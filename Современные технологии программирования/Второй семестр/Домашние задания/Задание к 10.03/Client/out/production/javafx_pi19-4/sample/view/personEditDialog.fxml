<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="350.0" prefWidth="350.0" styleClass="background" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.PersonEditDialog">
    <children>
        <GridPane layoutX="14.0" layoutY="14.0" prefHeight="252.0" prefWidth="277.0" AnchorPane.bottomAnchor="45.0"
                  AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="132.0" minWidth="10.0" prefWidth="76.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="216.0" minWidth="10.0" prefWidth="201.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="First Name" styleClass="text-primary"/>
                <Label text="Last Name" GridPane.rowIndex="1" styleClass="text-primary"/>
                <Label text="Street" GridPane.rowIndex="2" styleClass="text-primary"/>
                <Label text="City" GridPane.rowIndex="3" styleClass="text-primary"/>
                <Label text="Postal Code" GridPane.rowIndex="4" styleClass="text-primary"/>
                <Label text="Birthday" GridPane.rowIndex="5" styleClass="text-primary"/>
                <TextField fx:id="firstNameField" GridPane.columnIndex="1"/>
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="streetField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <TextField fx:id="birthdayField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </children>
        </GridPane>
        <ButtonBar layoutX="120.0" layoutY="310.0">
            <buttons>
                <Button mnemonicParsing="false" onAction="#handleOkAction" stylesheets="@style.css" text="OK"/>
                <Button mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel"/>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
